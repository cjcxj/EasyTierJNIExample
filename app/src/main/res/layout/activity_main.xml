<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络名称：" />

        <EditText
            android:id="@+id/networkNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="例如：easytier"
            android:text="easytier"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="实例ID：" />

        <EditText
            android:id="@+id/instanceIdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="例如：52ca9394-f1da-41d5-9a65-5374809829b2"
            android:inputType="text" />

        <EditText
            android:id="@+id/instanceIdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="例如：52ca9394-f1da-41d5-9a65-5374809829b2"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="网络密钥：" />

        <EditText
            android:id="@+id/networkSecretEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入网络密钥" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="监听器地址（逗号分隔）：" />

        <EditText
            android:id="@+id/ipv4EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="例如：10.0.0.1/24" />

        <CheckBox
            android:id="@+id/dhcpCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="DHCP 模式" />

        <CheckBox
            android:id="@+id/externalNodeCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="使用公共共享节点" />

        <CheckBox
            android:id="@+id/serverModeCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="服务端模式" />

        <Button
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="启动 EasyTier" />

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="EasyTier 状态：未运行" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <EditText
                android:id="@+id/logTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:scrollbars="vertical"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:text="日志输出:\n"
                android:focusable="false"
                android:longClickable="true"
                android:textIsSelectable="true"
                android:background="@android:color/transparent" />
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
